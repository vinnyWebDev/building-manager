    <div><%= message %></div>
    <% end %>
  </div>

 <div>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %>
    <% tenant.errors.full_messages_for(:last_name ).each do |message| %>

    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :apartment %><br>
    <%= form.text_field :apartment %>
    <% tenant.errors.full_messages_for(:apartment ).each do |message| %>

    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :phone %><br>
    <%= form.text_field :phone %>
    <% tenant.errors.full_messages_for(:phone ).each do |message| %>

    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
